---
import Layout from "./LayoutCarta.astro";
const { title } = Astro.props;
---

<Layout>
  <li class="relative border border-black" x-data="{selected:null}">
    <!-- El tipo boton es por una idea descartada -->
  <button
    type="button"
    class="w-full px-3 py-3 text-left"
  >
    <div class="flex items-center justify-between">
      <h4
        class="text-2xl flex justify-center items-start"
      >
        <b>{title}</b>
      </h4>
    </div>
  </button>

  <!-- Aqui va el contenido de cada apartado -->
    <div class="py-4 px-2 text-text/60">
      <slot />
    </div>
</li>

</Layout>